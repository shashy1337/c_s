<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_carrot_shop"
    app:startDestination="@id/productShopMainFragment">
    <fragment
        android:id="@+id/productShopMainFragment"
        android:name="com.example.carrotshop.Fragments.ProductShopMain"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_product_shop_main" >
        <action
            android:id="@+id/action_productShopMain_to_itemInfo"
            app:destination="@id/itemInfo"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/itemInfo"
        android:name="com.example.carrotshop.Fragments.ItemInfo"
        android:label="fragment_item_info"
        tools:layout="@layout/fragment_item_info" />
    <fragment
        android:id="@+id/favouritesFragment"
        android:name="com.example.carrotshop.Fragments.FavouritesFragment"
        android:label="fragment_favourites"
        tools:layout="@layout/fragment_favourites" >
        <action
            android:id="@+id/action_favouritesFragment_to_itemInfo"
            app:destination="@id/itemInfo"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/rocketAnimFragment"
        android:name="com.example.carrotshop.Fragments.RocketAnimFragment"
        tools:layout="@layout/fragment_rocket_anim"
        android:label="RocketAnimFragment" />
</navigation>